!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : ENV['APP_NAME']
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Ror Workshops'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      = render 'layouts/messages'
      .container{class: (content_for?(:container_class)) ? yield(:container_class) : "content-box" }
        .row
          .col-xs-12
            = breadcrumbs separator: " &raquo; "
            = yield
